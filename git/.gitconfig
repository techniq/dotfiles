[user]
	name = Sean Lynch
	email = techniq35@gmail.com

[core]
	excludesfile = ~/.gitignore
	autocrlf = input
    # whitespace = cr-at-eol

[branch]
	autosetuprebase = always

[color]
	ui = true

[alias]
    st = status -sb
	l = log
	lg = log --graph
    lga = !git lg --all
    lgs = !git lga --stat
    lgp = !git lga -p
    in = !git lga ..FETCH_HEAD
    incoming = !git fetch; !git in
    # incoming = !git fetch; git lga ..@{u}
    outgoing = !git lga @{u}..

    # Shows all commits that are in any of local branches but not in any of remote tracking branches for origin (what you have that origin doesnâ€™t).
    unpushed = !git lga --branches --not --remotes=origin

    w = whatchanged --graph --abbrev-commit --date=relative --all
    amend = commit --amend -C HEAD
    unstage = reset HEAD
    uncommit = reset HEAD^

[log]
	decorate = true

[format]
	pretty = %C(yellow)%h%C(reset)%C(red)%d%C(reset) %s %C(bold blue)<%an> %C(green)(%cr)%C(reset)  

[merge]
	tool = gvimdiff

[mergetool "gvimdiff"]
	path = /usr/local/bin/mvimdiff

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[diff]
	tool = gvimdiff

[difftool "gvimdiff"]
	path = /usr/local/bin/mvimdiff

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
